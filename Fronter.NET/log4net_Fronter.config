<log4net>
    <root>
        <level value="ALL" />
        <appender-ref ref="SentryAppender" />
        <appender-ref ref="grid" />
        <appender-ref ref="file" />
    </root>
    <appender name="SentryAppender" type="Sentry.Log4Net.SentryAppender, Sentry.Log4Net">
        <!--Sends the log event Identity value as the user-->
        <SendIdentity value="true" />
        <threshold value="ERROR" />
    </appender>
    <appender name="grid" type="Fronter.LogAppenders.LogGridAppender">
    </appender>
    <appender name="file" type="log4net.Appender.FileAppender">
        <file value="log.txt" />
        <AppendToFile value="false" />
        <layout type="log4net.Layout.PatternLayout">
            <conversionPattern value="%date{yyyy'-'MM'-'dd HH':'mm':'ss} [%level] %message%newline" />
        </layout>
    </appender>
</log4net>